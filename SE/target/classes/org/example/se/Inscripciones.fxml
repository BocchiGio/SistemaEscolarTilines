<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.se.AsistenciaController">
    <top>
        <ToolBar style="-fx-background-color: #2c3e50; -fx-padding: 10;">
            <items>
                <!-- PRIMERO la materia -->
                <Label style="-fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 0 5 0 0;" text="Alumno:" />
            <TextField />

                <!-- LUEGO la persona -->
                <Label style="-fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 0 5 0 15;" text="Semestre" />
                <ComboBox fx:id="comboPersona" prefWidth="200.0" promptText="Seleccionar semestre" />

                <!-- Fecha -->
                <Label style="-fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 0 5 0 15;" text="Fecha:" />
                <DatePicker fx:id="dpFecha" promptText="Fecha" />

                <!-- Acciones -->
                <MenuButton fx:id="menuAcciones" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 5 15; -fx-margin: 0 0 0 20;" text="Acciones">
                    <items>
                        <MenuItem fx:id="menuAgregar" onAction="#agregarAsistencia" text="inscribirse" />
                        <MenuItem fx:id="menuEliminar" onAction="#eliminarAsistencia" text="dar de baja" />
                    </items>
                </MenuButton>
            </items>
        </ToolBar>
    </top>

    <center>
        <TabPane fx:id="tabPane" style="-fx-background-color: #ecf0f1;" tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab style="-fx-font-weight: bold;" text="📝Inscripciones">
                    <content>
                        <TableView fx:id="tblAsistencia" style="-fx-font-size: 12px;">
                            <columns>
                                <TableColumn fx:id="colPersona" prefWidth="300" text=" Alumno" />
                                <TableColumn fx:id="colMateria" prefWidth="300.0" text="Semestre" />
                                <TableColumn fx:id="colFecha" prefWidth="200.0" text="Fecha" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </center>
</BorderPane>


<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="CONTROLLER_NAME"
            prefHeight="400.0" prefWidth="600.0">

</AnchorPane>

