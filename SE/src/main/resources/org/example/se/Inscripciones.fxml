<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.se.InscripcionController">
    <top>
        <ToolBar style="-fx-background-color: #2c3e50; -fx-padding: 10;">
            <items>
                <Label style="-fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 0 5 0 0;" text="Alumno/ID:" />
                <TextField fx:id="txtAlumnoBusqueda" promptText="Buscar o Escribir ID" />

                <Label style="-fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 0 5 0 15;" text="Materia Inscrita:" />
                <ComboBox fx:id="comboSemestre" prefWidth="200.0" promptText="Seleccionar Materia Inscrita" />

                <Label style="-fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 0 5 0 15;" text="Fecha:" />
                <DatePicker fx:id="dpFechaInscripcion" promptText="Fecha de Inscripción" />

                <MenuButton fx:id="menuAcciones" style="-fx-background-color: #ff6b6b; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 5 15; -fx-margin: 0 0 0 20;" text="Matrícula">
                    <items>
                        <MenuItem fx:id="menuAgregar" onAction="#registrarInscripcion" text="Registrar Inscripción" />
                        <MenuItem fx:id="menuEliminar" onAction="#darDeBaja" text="Dar de Baja" />
                    </items>
                </MenuButton>
            </items>
        </ToolBar>
    </top>

    <center>
        <TabPane fx:id="tabPane" style="-fx-background-color: #ecf0f1;" tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab style="-fx-font-weight: bold;" text="📝 Registro de Inscripciones">
                    <content>
                        <TableView fx:id="tblInscripciones" style="-fx-font-size: 12px;">
                            <columns>
                                <TableColumn fx:id="colID" prefWidth="100" text="ID Insc." />
                                <TableColumn fx:id="colAlumno" prefWidth="250" text="Alumno" />
                                <TableColumn fx:id="colSemestre" prefWidth="250.0" text="Materia Inscrita" />
                                <TableColumn fx:id="colFechaInsc" prefWidth="150.0" text="Fecha Inscripción" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </center>
</BorderPane>
